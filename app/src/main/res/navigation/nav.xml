<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.akhundovmurad.agendax.ui.fragments.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/toSave"
            app:destination="@id/saveFragment" />
        <action
            android:id="@+id/toModify"
            app:destination="@id/modifyFragment" />
    </fragment>
    <fragment
        android:id="@+id/saveFragment"
        android:name="com.akhundovmurad.agendax.ui.fragments.SaveFragment"
        android:label="fragment_save"
        tools:layout="@layout/fragment_save" />
    <fragment
        android:id="@+id/modifyFragment"
        android:name="com.akhundovmurad.agendax.ui.fragments.ModifyFragment"
        android:label="fragment_modify"
        tools:layout="@layout/fragment_modify" />
</navigation>